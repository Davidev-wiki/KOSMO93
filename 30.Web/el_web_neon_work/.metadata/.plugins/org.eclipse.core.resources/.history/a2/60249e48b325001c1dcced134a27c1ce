<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Ajax's XMLHttpRequest</title>
<script type="text/javascript">
	
	function getFromServer(){
		
		// 1.XMLHttpRequest 객체를 생성
		var req = new XMLHttpRequest();
		console.log("req : " + req);
		
		// 2.서버와 통신할 때 사용할 처리 방법 등록
		console.log("req.onreadystatechange >>> 000 : " + req.onreadystatechange);
		req.onreadystatechange = function(){
			console.log("req.readyState : " + req.readyState);
			if(req.readyState == 4){
				console.log("if req.readyState == 4 트루일 때 값 : " + req.readyState);
				if(req.status == 200){
					console.log("req.status : if : " + req.status);
	        		console.log("req.responseText : if : " + req.responseText);
	        		document.getElementById("view").innerHTML = req.responseText;	
					
				}
			}
		}
		// 3. 요청 전송 & 통신을 시작
	}

</script>
</head>
<body>
<p id="view"></p>
<button type="button" onclick="getFromServer()"></button>
</body>
</html>