<script src="http://dmaps.daum.net/map_js_init/postcode.v2.js"></script>

<script type="text/javascript">
	alert("자바스크립트 블럭 시작 >>> : ")

	$(document).ready(function(){	
		alert("제이쿼리 블럭 시작 >>> : ")
		// 회원번호 		
		// 이름 
		
		// 아이디 중복체크		
		$("#midbtn").click(function(){		
			alert("idCheck >>> : Ajax 배워서 할 예정임 ㅋ ");		
			console.log("idCheck >>> : ");
			
			let midVal = $("#mid").val();
			if (midVal == '') {
				alert("중복 체크할 아이디를 입력하세요 >>> : ");
				$("#mid").focus();
				return false;
			}
		});
		
		// 비밀번호 체크 
		$("#pwCheck").click(function(){
			console.log(" pwCheck 함수 진입");
			// var pw = $("#mpw");
			// var pw_r = $("#mpw_r");
			var pw = document.getElementById("mpw").value;
			var pw_r = document.getElementById("mpw_r").value;			
			alert(pw + " : " + pw_r);
			if(pw == pw_r) {
				alert("비밀번호가 같습니다.");
				// pw_r.val('');
				document.memForm.mpw_r.value = "";
				$("#mgender").focus();						
				return true;
			} else {
				alert("비밀번호가 다릅니다.");
				// pw.val('');
				// pw_r.val('');
				document.memForm.mpw.value = "";
				document.memForm.mpw_r.value = "";
				// pw.focus();			
				document.memForm.mpw.focus();
				return false;
			}
		});
		
		// 성별
		
		// 생년월일
		$("#mbirth").on("input", function(){
			var m = $("#mbirth");
			if (m.val().length > m.maxlength){
				m.valu = m.value.slice(0, m.maxlength);
			}
		});
        // 월 
        $("#mbirth1").append("<option value=''>월--- </option>");
        for(var i = 1; i <= 12; i++){
        	if (i < 10){ i = '0'+i;}
            $("#mbirth1").append("<option value='"+ i +"'>"+ i + "</option>");
        }
        // 일 
        $("#mbirth2").append("<option value=''>일 ---</option>");
        for(var i = 1; i <= 31; i++){
        	if (i < 10){ i = '0'+i;}
            $("#mbirth2").append("<option value='"+ i +"'>"+ i + "</option>");
        }

		
		// 핸드폰		
		// 전화번호
		
		// 이메일 
		$('#memail2').change(function(){	
		$("#memail2 option:selected").each(function () {
			if($(this).val()== '1'){ //직접입력일 경우 
					var aa = $("#memail1").val();
					//alert("aa >>> : " + aa);
					$("#memail1").val(''); //값 초기화 
					$("#memail1").attr("readonly",false); //활성화 				
			}else{ //직접입력이 아닐경우 
					$("#memail1").val($(this).text()); //선택값 입력 
					$("#memail1").attr("readonly",true); //비활성화 
			}}); 
		}); 	
		
		// 우편번호	
		$("#zonecode").click(function(){
			console.log("zonecode >>> : ");
			new daum.Postcode({
				oncomplete: function(data) {
				    $("#mzonecode").val(data.zonecode); //5자리 새우편번호 사용
				    $("#mroadaddress").val(data.roadAddress); //도로명 주소
				    $("#mgibunaddress").val(data.gibunAddress); //지번주소			
				}
			}).open();
		});
		
		// 취미		
		// 소개글 		
		// 사진 
		
		// HTML에서  JSP로 <form>태그를 이용해 보내는 데이터 : 13개?   <--------- > DB에 저장되는 총 컬럼 수 : 19개 
		//					<HTML>
		// 			mnum, mname, mid, mpw							
		// 			mgender, mbirth, mhp, mtel
		// 			memail, mzonecode, 
		// 			mroadaddress, mgibunaddress
		// 			minfo
		// 					<etc>
		// 			mhobby(controller) 
		// 			mphoto(context)
		// 			madmin(controller)
		// 			deleteyn(SqlMap)
		// 			insertdate(SqlMap)
		// 			updatedate(SqlMap)
		
		$("#btn").click(function(){
			alert("btn click() 함수 진입 >>> : ");
			alert("mnum : " + mnum);                 	 // mnum : 						[object HTMLInputElement]
			alert("mname : " + mname);              	 // mname : 					[object HTMLInputElement]
			alert("mid : " + mid);						 // mid : 						[object HTMLInputElement]
			alert("mpw : " + mpw);					 	 // mpw : 						[object HTMLInputElement]
			alert("mgender : " + mgender);			 	 // mgender : 		[object HTMLCollection]
			alert("mbirth : " + mbirth);            	 // mbirth : 					[object HTMLInputElement]
			alert("mhp : " + mhp);					   	 // mhp : 			[object HTMLSelectElement]
			alert("mtel : " + mtel);				  	 // mtel : 			[object HTMLSelectElement]
			alert("memail : " + memail);			  	 // memail : 					[object HTMLInputElement]
			alert("mzonecode : " + mzonecode);		  	 // mzonecode : 				[object HTMLInputElement]
			alert("mroadaddress : " + mroadaddress);  	 // mroadaddress : 				[object HTMLInputElement]
			alert("mgibunaddress : " + mgibunaddress);	 // mgibunaddress : 			[object HTMLInputElement]
			//alert("mhobby : " + mhobby)				 // error 발생 : Uncaught ReferenceError: mhobby is not defined
			alert("minfo : " + minfo);				     // minfo : 		[object HTMLTextAreaElement]
			//alert("mphoto : " + mphoto);				 // error 발생 : Uncaught ReferenceError: mphoto is not defined
			//alert("madmin : " + madmin);				 // error 발생 : Uncaught ReferenceError: mphoto is not defined
			//alert("deleteyn : " + deleteyn);			 // error 발생 : Uncaught ReferenceError: mphoto is not defined 
			//alert("insertdate : " + insertdate);		 // error 발생 : Uncaught ReferenceError: mphoto is not defined 
			//alert("updatedate : " + updatedate);		 // error 발생 : Uncaught ReferenceError: mphoto is not defined
			
			
			console.log("btn click() 함수 진입 >>> : ");
			console.log("mnum : " + mnum.value);
			console.log("mname : " + mname.value);
			console.log("mid : " + mid.value);
			console.log("mpw : " + mpw.value);
			console.log("mgender : " + document.getElementsByNames("mgender"));
			console.log("mbirth : " + mbirth.value);
			console.log("mhp : " + mhp.value);
			console.log("mtel : " + mtel.value);
			console.log("memail : " + memail.value);
			console.log("mzonecode : " + mzonecode.value);
			console.log("mroadaddress : " + mroadaddress.value);
			console.log("mgibunaddress : " + mgibunaddress.value);
			console.log("minfo : " + minfo.value);
			console.log("mhobby : " + document.getElementByNames("mhobby"));
			console.log("mphoto : " + document.getElementBYNames("mphoto"));
		
			
			//$("#memForm")
			//.attr({
			//		"action":"/testWeb/jsp/formTest.jsp",
			//	    "method":"GET",
			//	    "enctype":"application/x-www-form-urlencoded"
			//       })
			//.submit();	
		});
	});
</script>	
