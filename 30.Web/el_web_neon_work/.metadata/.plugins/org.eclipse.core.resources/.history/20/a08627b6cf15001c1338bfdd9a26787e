<script type="text/javascript">

	$(document).ready(function(){
		$("#jspBtn").click(function(){
			alert("jspBtn click됨");
			console.log("jsp버튼이 클릭됨");
			
			let v1 = $("#").val();
			alert("v1 : " + v1);
			
			$("#form_1_Form")
			.attr({
				"action" : "/testKck/cgiForm/cgiFormJsp.jsp?isudtype="+v1,
				"method" : "GET",
				"enctype" : "application/x-www-form-urlencoded"
				
			});
			
		});
	});
	function formTestCheck() {
		alert("formTestCheck()함수 진입");
		
		//보내기 버튼을 클릭하면 action이 실행되어 /testServlet/abc로 보내진다.
		///testServlet에 있는 abc어노테이션을 찾아서 실행하게 된다.
		document.memberForm.action="/testKosmo/abc";
		document.memberForm.method="POST";
		document.memberForm.enctype="application/x-www-form-urlencoded";		
		
		document.memberForm.submit();		
	}
</script>
</head>
