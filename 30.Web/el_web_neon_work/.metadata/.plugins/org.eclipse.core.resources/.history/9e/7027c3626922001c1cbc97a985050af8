	var sayHello = {
		
					  "name" : "Javascript"
					 ,"eng" : "function(){
						 			var console = document.getElementById("console");
						 			console.innerHTML = "Hello " + this.name;
						 			console.style.color = "#ff0000";
					 			}"
					 ,"kor" : "funtion(){
						 			var console = document.getElementById("console");
						 			console.innerHTML = "Hello " + this.name;
						 			console.style.color = "#ff0000";
						 			
					 			}"
	}
</script>
</head>
