public class KckBoardScr {

	public static ArrayList<KckBoardVO> kboardSelectAll() {
		System.out.println("KckBoardScr.kboardSelectAll()함수 진입-");
		KckBoardService kbs = null;
		kbs = new KckBoardServiceImpl();

		return kbs.kboardSelectAll();
	}

	public static String kboardSelect() {

	}

	public static String kboardInsert() {

