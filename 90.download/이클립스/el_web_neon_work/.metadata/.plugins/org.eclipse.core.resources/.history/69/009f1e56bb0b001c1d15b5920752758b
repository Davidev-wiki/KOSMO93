<script  src="http://code.jquery.com/jquery-latest.min.js"></script>

<!-- jsp로 보내는 코드 -->
<script type="text/javascript">
	alert("JavaScript 블럭 시작함");
	
	$(document).ready(function(){
		alert("jQuery 블럭 시작함");
		
		//<form> 데이터 보내기
		$("#boardBtn").click(function(){
			alert("보내기 버튼이 눌렸어요");
			console.log("boardBtn click함수 진입함")
			
			// attr() vs prop() ?
			// attribute() : HTML 문서 내에 있는 속성을 추가하는 함수
			// property() : JavaScript 문서 내에서 속성을 추가하는 함수  
			$("#boardWrite").attr({
				"action" : "/testWeb/jsp/formTest_1.jsp",
				"method" : "POST",
				"enctype" : "application/x-www-form-urlencoded"
			}).submit();
		});
	
	});
</script>
</head>
